#include <bits/stdc++.h>

using namespace std;

int main()
{
int t;
cin>>t;
while(t--)
{
string X;
cin>>X;

string Y=X;
reverse(X.begin(),X.end());

int n=X.size();
int L[n+1][n+1];

for (int i = 0; i <= n; i++)
{
for (int j = 0; j <= n; j++)
{
if (i == 0 || j == 0)
L[i][j] = 0;

else if (X[i - 1] == Y[j - 1])
L[i][j] = L[i - 1][j - 1] + 1;

else
L[i][j] = max(L[i - 1][j], L[i][j - 1]);
}
}

int ans= L[n][n];
cout<< ans <<endl;
    
}
return 0;
    
}
